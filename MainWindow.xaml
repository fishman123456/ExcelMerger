<Window x:Class="ExcelMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Объединение Excel-файлов" Height="450" Width="600">
    <Grid Margin="10">
        <StackPanel Grid.ColumnSpan="10">
            <TextBlock FontWeight="Bold" FontSize="16">Объединение Excel по первому столбцу</TextBlock>

            <GroupBox Header="Файл 1">
                <StackPanel Orientation="Horizontal" Margin="5" MinWidth="50">
                    <TextBox x:Name="TxtFile1" Width="auto" IsReadOnly="True" Margin="0,0,10,0" MinWidth="50"/>
                    <Button Content="Выбрать..." Click="BrowseFile1_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Файл 2">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBox x:Name="TxtFile2" Width="auto" IsReadOnly="True" Margin="0,0,10,0" MinWidth="50"/>
                    <Button Content="Выбрать..." Click="BrowseFile2_Click"/>
                </StackPanel>
            </GroupBox>

            <Button Content="Объединить и сохранить..." 
                    Background="LightGreen" 
                    FontWeight="Bold"
                    Click="MergeFiles_Click" 
                    Margin="0,10"/>

            <ProgressBar x:Name="ProgressBar" Height="20" Visibility="Collapsed"/>

            <TextBox x:Name="TxtStatus" 
                     Height="100" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
